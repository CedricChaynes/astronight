<div class="container border p-3">
  <div class="flexbox">

    <div>
      <h4><b><%= @event.site.address %></b></h4>
      <h5><span id="event" data-date=<%= @event.date %>><%= I18n.localize(@event.date, format: :custom) %></span></h5>
    </div>

    <div id="mygauge" style="text-align:right; margin:0px auto 0px auto;" class="cpuSpeed gauge-container" data-score="<%= @event.score["total_score"] %>">
    </div>

    <% if user_signed_in? %>
        <button class='btn-primary' id= 'modal-toggle' name='commit' data-toggle='modal' data-target='#confirmModal' data-disable-with="Confirmer ma présence">Confirmer ma présence</button>
    <% end %>
  </div>
</div>

<br>
<hr>
<br>

<div class="flex-container">

  <div class="element">

    <div class="map"><%= image_tag @event.site.photo, class: 'sites' %></div>

    <div class="affichage">
      <ul>
        <img class="pictos" src="/assets/planet.png"><span>Evenements Astronomiques</span>
        <img class="pictos" src="/assets/moon.png"><span>Cycle de la lune</span>
        <img class="pictos" src="/assets/city.png"><span>Pollution Lumineuse</span>
        <img class="pictos" src="/assets/weather"><span>Méteo</span>
      </ul>
    </div>

  </div>

  <div class="map">

    <div id="future-map">Map</div>

    <div class="d-flex">
      <input class="btn-primary"type="submit" name="commit" value="Voir l'itinéraire" class="btn btn btn-primary" style="width:75%" data-disable-with="Confirmer ma présence">
    </div>

  </div>

</div>

<hr>

<div class="description">
  <h7><i><%= @event.site.description %></i></h7>
</div>

<hr>

<section class="py-l u-separator-top">
  <h3>Participants</h3>
  <br>
  <%= render 'participations_table' %>
</section>

<%= render 'toolmodal' %>
