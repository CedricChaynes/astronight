<div class="container border p-3">
  <div class="flexbox">
    <div>
      <h4><b><%= @event.site.address %></b></h4>
      <h5><span id="event" data-date=<%= @event.date %>><%= I18n.localize(@event.date, format: :custom) %></span></h5>
    </div>
    <div id="mygauge" style="text-align:right; margin:0px auto 0px auto;" class="cpuSpeed gauge-container" data-score="<%= @event.event_score %>"></div>
    <div class="d-flex">
      <input class="btn-primary"type="submit" name="commit" value="Confirmer ma présence" class="btn btn btn-primary" data-toggle="modal" data-target="#exampleModal" style="width:75%" data-disable-with="Confirmer ma présence">
    </div>
  </div>

  <br>
  <hr>
  <br>

  <div class="flex-container">
    <div class="element">
      <div class="map"><%= image_tag @event.site.photo, class: 'sites' %></div>
      <div class="affichage">
        <ul>
          <img class="pictos" src="/assets/planet.png"> <span>Evenements Astronomiques</span>
          <img class="pictos" src="/assets/moon.png"> <span> Cycle de la lune</span>
          <img class="pictos" src="/assets/city.png"><span> Pollution Lumineuse</span>
          <img class="pictos" src="/assets/weather"><span> Méteo</span>
        </ul>
      </div>
    </div>

    <div class="map">
      <div id="future-map">Map</div>
      <div class="d-flex">
        <input class="btn-primary"type="submit" name="commit" value="Voir l'itinéraire" class="btn btn btn-primary" style="width:75%" data-disable-with="Confirmer ma présence">
      </div>
    </div>
  </div>


  <hr>

  <div class="description">
    <h7><i><%= @event.site.description %></i></h7>

    <% if user_signed_in? %>
      <%= simple_form_for [@event, @participation] do |f| %>

        <% hidden_field_tag :event_id, @event.id %>
        <% hidden_field_tag :user_id, current_user.id %>
        <br>
        <div class="d-flex">
          <%= f.button :submit, 'Confirmer ma présence', class: 'btn btn-primary w-25 show-modal modal' %>
          <div>
            <%= link_to "https://www.google.com/calendar/render?action=TEMPLATE&text=#{URI.encode("Soirée d'astronomie")}&dates=#{@event.date.strftime('%Y%m%dT180000')}/#{(@event.date + 1.days).strftime('%Y%m%dT030000')}&location=#{@event.site.address}&sprop=name:Name&sprop=website:EventWebite&details=#{@event.site.description}&sf=true&output=xml", class: 'btn btn-primary w-100' do %>
              Ajouter dans mon calendrier
            <% end %>
          </div>
        </div>
        <% end %>
      <% end %>
  </div>

  <hr>

  <section class="py-l u-separator-top">
    <h3>Participants</h3>
    <br>
    <%= render 'participations_table' %>
  </section>

</div>

<%= render 'toolmodal' %>
