<div class="flex-item">
  <% @events.each do |event| %>
    <ul>
      <%= link_to event_path(event) do %>
      <div class="card-trip">
        <%= image_tag "#{event.site.photo}", class: 'img-radius', style: "background-image: url(#{image_url('image-placeholder-225x225.png')})" %>
        <div class="card-trip-infos">
          <div>
            <h4><%= I18n.localize(event.date, format: :custom) %></h4>
            <p><%= event.site.address %></p>
          </div>
          <div id="mygauge" class="cpuSpeed gauge-container" data-score=<%= event.event_score %>></div>
        </div>
      </div>
      <% end %>
    </ul>
    <!-- Gauge chart -->
    <div id="mygauge" class="cpuSpeed gauge-container" data-score=<%= event.event_score %>></div>
    <!-- End of gauge chart -->
  <% end %>
</div>
