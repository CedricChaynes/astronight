<div class="container form_console" style="width: 400px">
  <h3 class="text-center p-3" style="margin-top: 24px">Connexion</h3>
  <div class="p-3">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: 'Mot de passe',
                required: true,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: 'Rester connectÃ©', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-right">
    <%= f.button :submit, "Se connecter" %>
  </div>
  <div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
</div>
